@model Mvc.ViewModels.GuitarBuilderViewModel

@{
    ViewData["Title"] = "FluentValidation";
}

<h1>FluentValidation</h1>

<h4>GuitarBuilderViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FluentValidation">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Guitar.Name" class="control-label"></label>
                <input asp-for="Guitar.Name" class="form-control" placeholder="Name for your guitar" />
                <span asp-validation-for="Guitar.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Guitar.Body" class="control-label"></label>
                <select class="form-control" asp-for="SelectedBody" asp-items="Model.BodyList"></select>
                <span asp-validation-for="Guitar.Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Guitar.BridgePickup" class="control-label"></label>
                <select class="form-control" asp-for="SelectedBridgePickup" asp-items="Model.BridgePickupList"></select>
                <span asp-validation-for="Guitar.BridgePickup" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Guitar.MiddlePickup" class="control-label"></label>
                <select class="form-control" asp-for="SelectedMiddlePickup" asp-items="Model.MiddlePickupList"></select>
            </div>
            <div class="form-group">
                <label asp-for="Guitar.NeckPickup" class="control-label"></label>
                <select class="form-control" asp-for="SelectedNeckPickup" asp-items="Model.NeckPickupList"></select>
            </div>
            <div class="form-group">
                <label asp-for="Guitar.Strings"></label>
                <select class="form-control" asp-for="SelectedStrings" asp-items="Model.StringsList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
